<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_dropdown_menu"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/open_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Inventory"
            android:padding="16dp"
            android:enabled="false"
            android:textColor="@color/neutralColorDisabled"
            android:fontFamily="@font/jet_brains_mono_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryVeryLightColor"
            android:layout_marginHorizontal="8dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/rename_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Chat"
        android:padding="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/jet_brains_mono_medium" />

    <TextView
        android:id="@+id/delete_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Chat"
        android:padding="16dp"
        android:textColor="#FF4229"
        android:fontFamily="@font/jet_brains_mono_medium" />
</LinearLayout>
