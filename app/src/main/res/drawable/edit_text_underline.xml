            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
            <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/cyan" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
